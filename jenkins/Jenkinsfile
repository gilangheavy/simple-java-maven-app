node {
    try {
        stage('Checkout') {
            checkout scm
        }

        // UPDATE: Pake image Maven 3.9.9 + JDK 21 sesuai request project
        docker.image('maven:3.9.9-eclipse-temurin-21').inside {
            
            stage('Build') {
                echo 'Building Java App...'
                // Build package
                sh 'mvn -B -DskipTests clean package'
            }

            stage('Test') {
                echo 'Running Unit Tests...'
                // Run test
                sh 'mvn test'
            }
        }
    } catch (e) {
        currentBuild.result = 'FAILURE'
        throw e
    }
}
